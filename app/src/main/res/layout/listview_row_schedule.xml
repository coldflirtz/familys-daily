<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMember"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/tvItemType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Schedule"
        android:textAlignment="textEnd"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvScheduleCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Creator"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <View
        android:id="@+id/lineSeparator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"
        android:layout_below="@id/tvItemType"
        android:layout_marginTop="3dp"/>

    <TextView
        android:id="@+id/tvScheduleDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lineSeparator"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:text="28/07/17"/>

    <TextView
        android:id="@+id/tvScheduleDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvScheduleCreator"
        android:layout_marginTop="5dp"
        android:maxLines="5"
        android:lines="2"
        android:text="abasdf"
        />
    <TextView
        android:id="@+id/tvScheduleLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvScheduleDetail"/>

</RelativeLayout>