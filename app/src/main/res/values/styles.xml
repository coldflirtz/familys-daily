<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SpinnerTheme" parent="android:Theme.Light">
        <item name="spinnerDropDownItemStyle">@style/SpinnerWhite</item>
        <item name="android:spinnerItemStyle">@style/SpinnerWhite</item>
    </style>

    <style name="SpinnerWhite" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/spinnerTextColor</item>
        <item name="android:backgroundTint">@color/spinnerTextColor</item>
    </style>

</resources>
